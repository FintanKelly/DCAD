<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/monsterArmor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:text="Monster Armor: " />

    <TextView
        android:id="@+id/playerArmor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/monsterArmor"
        android:layout_alignBottom="@+id/monsterArmor"
        android:layout_alignParentLeft="true"
        android:text="Player Armor: " />

    <TextView
        android:id="@+id/monsterHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/playerArmor"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="29dp"
        android:text="Monster Health: " />

    <TextView
        android:id="@+id/playerHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/monsterHealth"
        android:layout_alignBottom="@+id/monsterHealth"
        android:layout_alignParentLeft="true"
        android:text="Player Health:" />

    <sofia.graphics.ShapeView
        android:id="@+id/shapeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cardChoice" />

    <RadioGroup
        android:id="@+id/cardChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Card 1" />

        <RadioButton
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card 2" />

        <RadioButton
            android:id="@+id/card3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card 3" />
    </RadioGroup>

    <Button
        android:id="@+id/play"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monsterArmor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:text="Play Card" />

    <TextView
        android:id="@+id/cardDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/playerArmor"
        android:layout_marginTop="38dp" />

</RelativeLayout>